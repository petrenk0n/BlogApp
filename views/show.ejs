<% include ./partials/header %>
<div class="ui main text container tall stacked segment">
    <div class="ui huge header center aligned"><%=blog.title%></div>
        <div class="spacer"></div>
    <div class="ui top attached">
        <div class="item"></div>
            <img class="ui centered image" src="<%=blog.image%>">
        <div class="spacer"></div>
        <div class="description">
            <p><%=blog.body%></p>
        </div>
        <div class="spacer"></div>
        <a class="tiny ui inverted blue button" href="/blogs/<%=blog._id%>/edit">Edit</a>
        <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
            <button class="tiny ui inverted red button">Delete</button>
        </form>
    </div>
</div>
<% include ./partials/footer %>
